function showAutoUpdatePopup(item) {
    const popup = document.createElement('div');
    popup.style = "position:fixed; bottom:20px; right:20px; width:280px; background:#fff; z-index:999999; border-radius:15px; box-shadow:0 5px 25px rgba(0,0,0,0.2); padding:15px; direction:rtl; border:2px solid #ff0055; animation: slideIn 0.5s ease-out;";
    popup.innerHTML = `
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:8px;">
            <span style="background:#333; color:#fff; padding:2px 8px; border-radius:5px; font-size:10px; font-weight:bold;">×—×“×© ×‘-×©×¢×¨ ×”××¨×¥! âš¡</span>
            <button onclick="this.parentElement.parentElement.remove()" style="border:none; background:none; cursor:pointer; font-weight:bold;">âœ•</button>
        </div>
        <h4 style="margin:0; color:#111; font-size:14px;">${item.title}</h4>
        <p style="margin:5px 0 0; font-size:12px; color:#666;">${item.summary}</p>
        <style>@keyframes slideIn { from { transform: translateX(120%); } to { transform: translateX(0); } }</style>
    `;
    document.body.appendChild(popup);
}

function openLandingPage(title, content, link) {
    const decodedContent = decodeURIComponent(content);
    const modal = document.createElement('div');
    modal.style = "position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.85); z-index:999999; display:flex; align-items:center; justify-content:center; padding:20px; direction:rtl;";
    modal.innerHTML = `
        <div style="background:#fff; width:100%; max-width:450px; border-radius:20px; overflow:hidden; position:relative; text-align:right;">
            <button onclick="this.closest('div').parentElement.remove()" style="position:absolute; top:15px; left:15px; border:none; background:#eee; border-radius:50%; width:30px; height:30px; cursor:pointer; font-weight:bold;">âœ•</button>
            <div style="padding:40px 20px 25px; text-align:center; background:#f8f9fa; border-bottom:1px solid #eee;">
                <div style="font-size:45px; margin-bottom:10px;">ğŸ›ï¸</div>
                <h2 style="margin:0; color:#111; font-size:1.8rem; font-weight:900;">${title}</h2>
            </div>
            <div style="padding:25px; color:#333; line-height:1.7;">
                <div style="margin-bottom:30px;">${decodedContent}</div>
                <div style="text-align:center;">
                    <button onclick="window.open('${link}', '_blank')" style="background:#ff0055; color:#fff; padding:16px 40px; border:none; border-radius:50px; font-weight:bold; cursor:pointer; width:100%;">××¢×‘×¨ ×œ×¤×¨×˜×™×</button>
                </div>
            </div>
        </div>`;
    document.body.appendChild(modal);
}

function toggleText(btn) {
    const content = btn.closest('article').querySelector('.full-body');
    if (content.style.display === "none" || content.style.display === "") {
        content.style.display = "block";
        btn.innerText = "×¡×’×•×¨ Â«";
    } else {
        content.style.display = "none";
        btn.innerText = "×§×¨× ×¢×•×“ Â»";
    }
}

document.addEventListener('DOMContentLoaded', loadArticles);

