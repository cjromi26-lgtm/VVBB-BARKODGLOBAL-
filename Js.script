const sheetURL = "https://docs.google.com/spreadsheets/d/1IhvksJ9_H6RmTJbZwQWgWA9Zp3H-2C2aKZef3yE_9sQ/export?format=tsv";

async function loadArticles() {
    try {
        const response = await fetch(sheetURL);
        const tsvText = await response.text();
        const rows = tsvText.split('\n').filter(row => row.trim() !== "");
        
        const articles = rows.slice(1).reverse().map(row => {
            const cols = row.split('\t');
            const clean = (text) => text ? text.trim() : "";
            return {
                category: clean(cols[0]),
                title: clean(cols[1]),
                summary: clean(cols[4]),
                content: clean(cols[5]),
                img: clean(cols[6]),
                target: clean(cols[7]),
                link: clean(cols[8])
            };
        });

        renderContent(articles);

        // ×¤×•×¤-××¤ ××•×˜×•××˜×™ ×œ×©×•×¨×” ×”××—×¨×•× ×” ×©×¢×œ×ª×”
        if (articles.length > 0) {
            setTimeout(() => {
                showAutoUpdatePopup(articles[0]);
            }, 1500);
        }

    } catch (err) {
        console.error("×©×’×™××” ×‘×˜×¢×™× ×”:", err);
    }
}

function renderContent(articlesArray) {
    const magazineContainer = document.getElementById('dynamic-feed-container');
    const mallContent = document.querySelector('.mall-content');
    
    // --- ×”×¤×•× ×§×¦×™×” ×”××¢×•×“×›× ×ª ×©×××™×¨×” ×œ×™× ×§ ×œ×•×™×“××• ---
    function getMediaHTML(url) {
        if (!url) return '';
        
        // ×‘×“×™×§×” ×× ×”×œ×™× ×§ ×”×•× ×™×•×˜×™×•×‘
        if (url.includes('youtube.com') || url.includes('youtu.be')) {
            let videoId = "";
            if (url.includes('v=')) {
                videoId = url.split('v=')[1].split('&')[0];
            } else {
                videoId = url.split('/').pop();
            }
            // ××—×–×™×¨ × ×’×Ÿ ×•×™×“××• ×¨×¡×¤×•× ×¡×™×‘×™
            return `
                <div style="position:relative; padding-bottom:56.25%; height:0; overflow:hidden; border-radius:12px; margin-bottom:10px;">
                    <iframe src="https://www.youtube.com/embed/${videoId}" 
                            style="position:absolute; top:0; left:0; width:100%; height:100%; border:none;" 
                            allowfullscreen></iframe>
                </div>`;
        }
        
        // ×× ×–×” ×œ× ×™×•×˜×™×•×‘, ××¦×™×’ ×ª××•× ×” ×›×¨×’×™×œ
        return `<img src="${url}" style="width:100%; border-radius:12px; margin-bottom:10px; max-height:200px; object-fit:cover;" onerror="this.style.display='none'">`;
    }

    if (magazineContainer) {
        let magHTML = "";
        articlesArray.filter(art => art.target !== "×§× ×™×•×Ÿ").forEach(art => {
            
            let accentColor = "#007bff"; 
            let icon = "ğŸ“„";
            
            if (art.category.includes("×¨×›×‘")) { 
                accentColor = "#ff4757"; 
                icon = "ğŸš—"; 
            } else if (art.category.includes("× ×“×œ×Ÿ")) { 
                accentColor = "#2ed573"; 
                icon = "ğŸ "; 
            } else if (art.category === "×§×•×¤×•×Ÿ") { 
                accentColor = "#ff0055"; 
                icon = "ğŸ·ï¸"; 
            } else if (art.category.includes("×”×•×¤×¢×”")) { // ×”×•×¡×¤×ª×™ ××™×™×§×•×Ÿ ×œ×”×•×¤×¢×•×ª
                accentColor = "#FFD700";
                icon = "ğŸ¸";
            }

            magHTML += `
                <article class="feed-post-card" style="margin-bottom:25px; padding:15px; border-radius:15px; box-shadow:0 8px 20px rgba(0,0,0,0.1); background:#fff; text-align:right; direction:rtl; border-top: 6px solid ${accentColor};">
                    <span style="background:${accentColor}15; color:${accentColor}; padding:3px 12px; border-radius:20px; font-size:12px; font-weight:bold;">${icon} ${art.category}</span>
                    <h4 style="margin:15px 0 10px; color:#222; font-weight:bold;">${art.title}</h4>
                    ${getMediaHTML(art.img)}
                    <p style="font-size:14px; color:#555; line-height:1.5;">${art.summary}</p>
                    <div style="display:flex; gap:10px; margin-top:10px;">
                        <button onclick="toggleText(this)" style="color:${accentColor}; background:none; border:1px solid ${accentColor}; border-radius:8px; padding:6px 15px; font-weight:bold; cursor:pointer;">×§×¨× ×¢×•×“ Â»</button>
                        ${art.link ? `<button onclick="window.open('${art.link}', '_blank')" style="background:${accentColor}; color:#fff; border:none; padding:8px 16px; border-radius:8px; font-size:12px; cursor:pointer; font-weight:bold;">×œ×¤×¨×˜×™× / ×¨×›×™×©×”</button>` : ''}
                    </div>
                    <div class="full-body" style="display:none; margin-top:15px; border-top:1px dashed #eee; padding-top:15px; color:#333;">${art.content}</div>
                </article>`;
        });
        magazineContainer.innerHTML = magHTML;
    }

    // ×œ×•×’×™×§×ª ×”×§× ×™×•×Ÿ ×”×•×•×™×¨×˜×•××œ×™
    if (mallContent) {
        const mallArticles = articlesArray.filter(art => art.target === "×§× ×™×•×Ÿ" || art.target === "×©× ×™×”×");
        const existingFloors = mallContent.querySelectorAll('.floor-section').length;
        let dynamicMallHTML = "";
        
        for (let i = 0; i < mallArticles.length; i += 12) {
            const currentFloorNum = existingFloors + Math.floor(i / 12) + 1;
            const floorStores = mallArticles.slice(i, i + 12);
            
            dynamicMallHTML += `
                <div id="floor${currentFloorNum}" class="floor-section" style="margin-top:40px;">
                    <h2 style="background:#3f51b5; color:#fff; padding:8px 15px; border-radius:5px; display:inline-block;">×§×•××” ${currentFloorNum}</h2>
                    <div class="stores-grid" style="display:grid; grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap:15px; margin-top:15px;">
                        ${floorStores.map(art => `
                            <div class="store-card" style="background:#fff; border:1px solid #ddd; border-radius:12px; padding:20px; text-align:center; cursor:pointer;" 
                                 onclick="openLandingPage('${art.title.replace(/'/g, "\\'")}', '${encodeURIComponent(art.content)}', '${art.link}')">
                                <div style="font-size:35px; margin-bottom:10px;">ğŸ›ï¸</div>
                                <div style="font-weight:bold; color:#333;">${art.title}</div>
                            </div>
                        `).join('')}
                    </div>
                </div>`;
        }
        mallContent.insertAdjacentHTML('beforeend', dynamicMallHTML);
        if (typeof updateElevator === 'function') updateElevator();
    }
}

